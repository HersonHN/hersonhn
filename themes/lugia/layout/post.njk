{% extends "_layout.njk" %}

{% block content %}
<section class="post content">
  <div class="title">
    <h1>{{ page.title }}</h1>
    <div class="second-line">
      <small class="gray">{{ moment(page.date).format('YYYY-MM-DD') }}</small>
        {% for tag in page.tags.data %}
        <span class="tag">
          <a href="/{{ tag.path }}">{{ tag.name }}</a>
        </span>
        {% endfor %}
    </div>
  </div>

  <article>
    {{page.content}}
  </article>
</section>
{% endblock %}