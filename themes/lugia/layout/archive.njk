{% extends "_layout.njk" %}
{% set __title = "Posts" %}
{% block content %}
<section class="content">

<h2>Posts</h2>
{% for post in page.posts.data %}
<p>
  <small>{{ moment(post.date).format('YYYY-MM-DD') }}</small>
  <a href="/{{ post.path }}">{{ post.title }}</a>
</p>
{% else %}
<p>No posts yet.</p>
{% endfor %}

</section>
{% endblock %}